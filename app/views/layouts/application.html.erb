<!DOCTYPE html>
<html>
  <head>
    <title>El Applicacion de los Libros</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Pragmatic Bookshelf" %>
    </div>
    <div id="columns">
      <div id="side">

          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %>
            <% end %>
          <% end %>

        <ul>
          <li><%= link_to("Home", store_path) %></li>
          <li><a href="http://.../faq">Questions</a></li>
          <li><a href="http://.../news">News</a></li>
          <li><a href="http://.../contact">Contact</a></li>
        </ul>
        <span id="date_time"><%= Date.current %></span>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
