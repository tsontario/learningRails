<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog --- <%= pluralize(session[:counter], "view", "views") %> </h1>

<% cache ['store', Product.all] do %>
  <% @products.each do |product| %>
    <% cache ['entry', product] do %>
    <div class="entry">
      <%= image_tag(product.image_url) %>
      <h3><%= product.title %></h3>
      <%= sanitize(product.description) %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price, options={precision: 2, units: "$"})  %></span>
        <%= button_to "Add to Cart", line_items_path(product_id: product), remote: true %>
      </div>
    </div>
    <% end %>
  <% end %>
<% end %>

